.row
  .twelve.columns.ad
    .row{"data-mercury" => "full"}
      .panel
        %h3 ADVERTISEMENT
.row
  .nine.columns
    .row.header
      .ten.columns
        %h5 Most Popular Products
      .two.columns
        %h5
          %a{:href=> "#"} See More +
    .row
      .twelve.columns
        - @popular_products.each_with_index do |product, i|
          = render :partial => "layouts/product", :locals => { :product => product, :last => i== @popular_products.length - 1 }
    .row
      %br
    .row.header
      .ten.columns
        %h5 Most Popular Shops
      .two.columns
        %h5
          %a{:href=> "#"} See More +
    .row
      .twelve.columns
        - @popular_shops.each_with_index do |product, i|
          = render :partial => "layouts/product", :locals => { :product => product, :last => i== @popular_shops.length - 1 }
    .row
      %br
    .row.header
      .ten.columns
        %h5 Most Popular Events
      .two.columns
        %h5
          %a{:href=> "#"} See More +

  = render "layouts/sidebar"
