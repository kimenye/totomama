- if (size == 3)
  .large-3.columns.summary{:class => (last == true ? "end" : "") }
    %a.th{:href => product_path(product)}
      = image_tag product.photo.url
    %a{:href => product_path(product)}
      = product.name
    = render :partial => "layouts/rating_readonly", :locals => { :product => product }
- else
  .large-2.columns.summary{:class => (last == true ? "end" : "") }
    %a.th{:href => product_path(product)}
      = image_tag product.photo.url
    %a{:href => product_path(product)}
      = product.name
    = render :partial => "layouts/rating_readonly", :locals => { :product => product }