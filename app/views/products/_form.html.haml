= form_for @product do |f|
  - if @product.errors.any?
    .row
      .twelve.columns
        #error_explanation
          %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
          %ul
            - @product.errors.full_messages.each do |msg|
              %li= msg
  .row
    .six.columns
      = f.label :name
      = f.text_field :name
    .six.columns
  .row
    .six.columns
      = f.label :description
      = f.text_area :description
    .four.columns
      .row
        .twelve.columns
          = f.label :price
          = f.text_field :price
      .row
        .twelve.columns
          = f.label :rating
          = f.number_field :rating
      .row
        .twelve.columns
          = f.label :category
          = f.collection_select :category_id, Category.all, :id, :name
      .row
        .twelve.columns
          %br
          = f.label :photo
          = f.file_field :photo
    .two
  .row
    .twelve.columns
      .actions
        = f.submit 'Save', :class => "button"
