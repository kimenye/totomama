= form_for @lead do |f|
  - if @lead.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lead.errors.count, "error")} prohibited this lead from being saved:"
      %ul
        - @lead.errors.full_messages.each do |msg|
          %li= msg
  .row
    .twelve.columns
      %h4 We are launching soon, please fill in the form below and we will get back to you
      .field
        = f.label :name
        = f.text_field :name
      .field
        = f.label :email
        = f.text_field :email
      .field
        = f.label :phone_number
        = f.text_field :phone_number
      .field
        = f.label :category
        = f.text_field :category
      .field
        = f.label :location
        = f.text_field :location
      .actions
        = f.submit 'Save'
