= form_for @lead do |f|
  - if @lead.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lead.errors.count, "error")} prohibited this lead from being saved:"
      %ul
        - @lead.errors.full_messages.each do |msg|
          %li= msg
  .row
    .large-12.columns.large-centered.form-bg
      .large-6.columns.side-copy
        %br
        %img{:src => "/assets/mother-baby.png"}
          %br
          %br
          %p TotoMama is best place to find cool stuff for Toto and Mama
      .large-6.columns.main_form
        %h4 We are launching soon, please fill in the form below and we will get back to you
        .field
          = f.text_field :name, :placeholder => "Your Name"
        .field
          = f.email_field :email, :placeholder => "Your Email"
        .field
          = f.text_field :phone_number, :placeholder => "Your Phone Number"
        .field
          = f.select :type, options_for_select(@type_options.collect{ |u| [u, u] }), :html => {:class => "medium"}
        .field
          = f.select :category, options_for_select(@categories.collect{ |u| [u, u] }), :html => {:class => "medium"}
        .field
          = f.text_field :location, :placeholder => "Where are you located"
        .actions
          = f.submit 'Save',  :class => "button medium"
