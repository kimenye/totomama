= render 'articles/nav'

.row
  .twelve.columns
    %table.twelve
      %thead
        %tr
          %th Admin
          %th Title
          %th Content
          %th Status
          %th Category
          -#%th{:colspan => 3}
      %tbody
      - @articles.each do |article|
        %tr
          %td= article.admin
          %td= article.title
          %td= article.content
          %td= article.status
          %td= article.category
          %td= link_to 'Show', article
          %td= link_to 'Edit', edit_article_path(article)
          %td= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }

%br
.row
  = link_to 'New Article', new_article_path